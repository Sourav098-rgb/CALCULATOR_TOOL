<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/flight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/flight"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/todo"
        />

    <ImageView
        android:id="@+id/station"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@id/flight"
        android:src="@drawable/space_station"
        android:contentDescription="@string/todo"
        />

    <ImageView
        android:id="@+id/rover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/rover"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/flight"
        android:layout_marginStart="50dp"
        android:contentDescription="@string/todo"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/flight"
        android:layout_marginStart="-48dp"
        android:layout_marginBottom="-29dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/flight"
        android:text="Flight"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/station"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="-28dp"
        android:layout_toEndOf="@id/flight"
        android:text="Space Station"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rover"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="-29dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/flight"
        android:text="Rover"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="143dp"
        android:layout_height="87dp"
        android:layout_alignBottom="@id/station"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-22dp"
        android:layout_marginBottom="-172dp"
        android:layout_toStartOf="@id/Center"
        android:background="#216EF3"
        android:paddingTop="20dp"
        android:text="DCA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="143dp"
        android:layout_height="87dp"
        android:layout_alignBottom="@id/rover"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="-172dp"
        android:layout_toEndOf="@id/Center"
        android:background="#61AF4C"
        android:paddingTop="20dp"
        android:text="MARS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView

        android:id="@+id/Center"
        android:layout_width="145dp"
        android:layout_height="83dp"
        android:layout_alignBottom="@id/flight"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-169dp"
        android:contentDescription="TODO"
        android:src="@drawable/square"
        tools:ignore="ContentDescription,HardcodedText" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-156dp"
        android:layout_toStartOf="@id/Center"
        android:src="@drawable/right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-130dp"
        android:layout_alignBottom="@id/flight"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/flight"
        android:layout_marginStart="-153dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-171dp"
        android:layout_toEndOf="@id/Center"
        android:contentDescription="TODO"
        android:src="@drawable/left"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/OneWay"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/Center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-100dp"
        android:background="#D0F43662"
        android:paddingStart="5dp"
        android:text="One Way"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:layout_marginBottom="-100dp"
        android:layout_alignBottom="@id/Center"
        android:layout_marginTop="10dp"
        android:background="#D0F43662"
        android:layout_toEndOf="@+id/OneWay"
        tools:ignore="UseSwitchCompatOrMaterialXml" />



    <TextView
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-70dp"
        android:background="#F00232"
        android:text="Traveller"
        android:layout_marginStart="10dp"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignBottom="@id/OneWay"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />



</RelativeLayout>








